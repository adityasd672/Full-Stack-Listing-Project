<% layout("/layouts/boilerplate") -%>

<style>
  .filter.active {
  background-color: #ddd;
  border-radius: 5px;
}
a {
  text-decoration: none;
  color: black;
}
</style>

<body>
  <!-- <h3>All Listings</h3> -->
  <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
  <div id="filters">
    <div class="filter <%= category === undefined ? 'active' : '' %>">
      <a href="/listings">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div>
    <div class="filter <%= category === 'rooms' ? 'active' : '' %>">
      <a href="/listings?category=rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
    </div>
    <div class="filter <%= category === 'cities' ? 'active' : '' %>">
      <a href="/listings?category=cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </a>
    </div>
    <div class="filter <%= category === 'surfing' ? 'active' : '' %>">
      <a href="/listings?category=surfing">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Surfing</p>
      </a>
    </div>
    <div class="filter <%= category === 'mountains' ? 'active' : '' %>">
      <a href="/listings?category=mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter <%= category === 'castle' ? 'active' : '' %>">
      <a href="/listings?category=castle">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castle</p></a
      >
    </div>
    <div class="filter <%= category === 'pools' ? 'active' : '' %>">
      <a href="/listings?category=pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p></a
      >
    </div>
    <div class="filter <%= category === 'camping' ? 'active' : '' %>">
      <a href="/listings?category=camping">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p></a
      >
    </div>
    <div class="filter <%= category === 'farms' ? 'active' : '' %>">
      <a href="/listings?category=farms">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </a>
    </div>
    <div class="filter <%= category === 'arctic' ? 'active' : '' %>">
      <a href="/listings?category=arctic">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
    </div>

    <div class="tax-toggle ms-auto">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% if (allListings.length > 0) { %> <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <strong><%= listing.title %></strong> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
            <em class="tax-info"> &nbsp; &nbsp;+18 % gst</em>
          </p>
        </div>
      </div>
    </a>
    <% } %> <% } else {%>
    <p>No listings available.</p>
    <% } %>
  </div>
 
 

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");

    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else info.style.display = "none";
      }
    });
  </script>
</body>
